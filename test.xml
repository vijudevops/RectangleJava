<?xml version="1.0" encoding="UTF-8"?>
 <!-- Set the project name, basedir and default target to be executed-->
<project name="Rectangle-Test" default="main" basedir=".">
  <property environment="env"/>
  <!-- Sets the properties here-->
  <property name="src.dir" location="src" />
  <property name="build.dir" location="bin" />
  <property name="reports.dir" location="reports" />
  
  
  <path id="class.path">
    <pathelement location="./lib/junit-4.13.2.jar"/>
    <pathelement location="${build.dir}"/>  
  </path>
 
  <!-- Target for deleting the existing directories-->
  <target name="clean">
    <delete dir="${build.dir}" />
	<delete dir="${reports.dir}" />
  </target>
 
  <!-- Target for creating the new directories-->
  <target name="makedir">
    <mkdir dir="${build.dir}" />
	<mkdir dir="${reports.dir}" />	
  </target>
 
  <!-- Target for compiling the java code-->
  <target name="compile" depends="makedir">
    <javac srcdir="${src.dir}" destdir="${build.dir}">
	  <classpath refid="class.path" />
    </javac>	
  </target>
 
  <!-- Creates a test report xml file -->
  <target name="test" depends="clean, makedir, compile">
    <junit printsummary="yes" fork="true">
        <classpath refid="class.path" />
        <test name= "RectangleTest" todir="${reports.dir}" outfile="result">
            <formatter type="xml"/>
        </test>
    </junit>
  </target>
  
  <!-- Defualt target to run all targets-->
  <target name="main" depends="test">
    <description>Main target</description>
  </target>
 
</project>
